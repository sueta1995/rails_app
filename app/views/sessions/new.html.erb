<%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" >
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Вход</h2>
              <p class="text-white-50 mb-5">Введите ваши email и пароль!</p>

              <div class="form-outline form-white mb-4">
                <%= form.text_field :email, class: 'form-control form-control-lg' %>
                <%= form.label :email, class: "form-label" %>
              </div>

              <div class="form-outline form-white mb-4">
                <%= form.password_field :password, class: 'form-control form-control-lg' %>
                <%= form.label :password, class: 'form-label' %>
              </div>

              <%# <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p> %>
              
              <%= form.submit 'Войти', class: 'btn btn-outline-light btn-lg px-5' %>

            </div>

            <div>
              <p class="mb-0">Нет аккаунта? <a href="/users/new" class="text-white-50 fw-bold">Зарегистрируйтесь!</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>