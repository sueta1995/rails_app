<h2 class="title">Регистрация</h2>

<div class="mt">
	<%= form_with model: @user do |form| %>
		<p class="mt"><%= form.label :nickname, 'Ваш никнейм' %></p>
		<p><%= form.text_field :nickname, class: 'form-text-field' %></p>

		<p class="mt"><%= form.label :email %></p>
		<p><%= form.text_field :email, class: 'form-text-field' %></p>

		<p class="mt-lg"><%= form.submit 'Зарегистрироваться', class: 'button button-main'%>
	<% end %>
</div>