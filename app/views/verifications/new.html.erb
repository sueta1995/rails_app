<% if session[:ver_code].nil? %>
	<% controller.redirect_to root_path, notice: "Вы не можете перейти по этой ссылке!" %>  
<% else %>
  <%= form_with scope: :verification, url: verifications_path, data: {turbo: false} do |form| %>
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" >
            <div class="card-body p-5 text-center">

              <div class="mb-md-5 mt-md-4 pb-5">

                <h2 class="fw-bold mb-2 text-uppercase">Верификация</h2>
                <p class="text-white-50 mb-5">Введите код который был отправлен на указанную вами почту от suetafun@gmail.com!</p>

                <div class="form-outline form-white mb-4">
                  <%= form.text_field :code, class: 'form-control form-control-lg' %>
                  <%= form.label :code, class: "form-label" %>
                </div>
                
                <%= form.submit 'Ввести', class: 'btn btn-outline-light btn-lg px-5' %>

              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
