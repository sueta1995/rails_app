<% if @fol_user_required.count > 0%>
  <h1 class="display-6">Подписчики пользователя:</h1>
  <ul class="list-group">
  <br>
    <% @fol_user_required.each do |fol| %>
      <% fol_user = User.find(fol[:follower_id]) %>
      <%= link_to "/users/#{fol_user[:id]}" do %>
        <li class="list-group-item">
          <%= fol_user[:nickname] %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <h1 class="display-6">Нет подписчиков</h1>
<% end %>
